<div class="container-fluid">
    <br>
    <ol class="breadcrumb">
        <li class="active">
            Dashboard
        </li>
    </ol>
    <div class="col-lg-4 col-md-12">
        <div class="card">
            <div class="card-block">
                <h4 class="card-title">
                    Quick Actions
                </h4>
                <div class="card-block">
                    <p class="card-text">
                        You have
                        <strong>
                            {{ status.patientCount }}
                        </strong>
                        total patients.
                    </p>
                    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addModal">
                        ADD NEW
                    </button>
                </div>
                <div class="card-block">
                    <p class="card-text">
                        You have
                        <strong>
                            {{ status.noncompliantCount }}
                        </strong>
                        total noncompliant patients.
                    </p>
                    <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#notifyModal">
                        NOTIFY
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-6">
        <canvas id="radarChart" width="400" height="400"></canvas>
    </div>
    <div class="col-lg-4 col-md-6">
        <div id="legend" class="card">
            <div class="card-block">
                <h4 class="card-title">
                    Legend
                </h4>
            </div>
        </div>
    </div>
    <div class="col-xs-12">
        <div class="card">
            <div class="card-block">
                <div class="row">
                    <div class="col-sm-6">
                        <h4 class="card-title">
                            Trials
                        </h4>
                    </div>
                    <div class="col-sm-6">
                        <button type="button" class="btn btn-primary pull-right" data-toggle="modal" data-target="#addModal">
                            ADD NEW
                        </button>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Status
                                </th>
                                <th>
                                    Total Patients
                                </th>
                                <th>
                                    Target Number of Patients
                                </th>
                                <th>
                                    Recruited Number of Patients
                                </th>
                                <th>
                                    Active
                                </th>
                                <th>
                                    Completed
                                </th>
                                <th>
                                    # Compliant
                                </th>
                                <th>
                                    # Noncompliant
                                </th>
                                <th>
                                    Duration
                                </th>
                                <th>
                                    Start Date
                                </th>
                                <th>
                                    End Date
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#unless trials.length}}
                                <tr>
                                    <td colspan="8">
                                        <div class="card card-inverse card-info text-center card-block">
                                            <div class="card-title">
                                                No Clinical Trials
                                            </div>
                                            <div class="card-text">
                                                Please contact an administrator to create a new trial.
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {{/unless}}
                            {{#each trials}}
                                <tr>
                                    <td>
                                        <a href="/trial/{{ id }}">
                                            {{ name }}
                                            <i class="fa fa-search"></i>
                                        </a>
                                    </td>
                                    <td>
                                        {{ status }}
                                    </td>
                                    <td>
                                        {{ patientCount }}
                                    </td>
                                    <td>
                                        {{ targetNumberOfPatients }}
                                    </td>
                                    <td>
                                        {{ recruitedNumberOfPatients }}
                                    </td>
                                    <td>
                                        {{ activePatients }}
                                    </td>
                                    <td>
                                        {{ completedPatients }}
                                    </td>
                                    <td>
                                        {{ compliantCount }}
                                    </td>
                                    <td>
                                        {{ noncompliantCount }}
                                    </td>
                                    <td>
                                        {{ duration }}
                                    </td>
                                    <td>
                                        {{ start }}
                                    </td>
                                    <td>
                                        {{ end }}
                                    </td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

{{> notify-patient}}
{{> add-trial}}

<script>
    var data = JSON.parse('{{{ graphData }}}');
    var ctx = document.getElementById('radarChart').getContext('2d');
    var options = {
        legendTemplate: '<ul class="list-group list-group-flush"><% for (var i = 0; i < data.datasets.length; i++){%><li class="list-group-item"><i style="color:<%=data.datasets[i].backgroundColor%>" class="fa fa-circle"></i> <%=data.datasets[i].label%></li><%}%></ul>'
    };
    var radarChart = new Chart.Radar(ctx, {
        data: data,
        options: options
    });
    var legend = document.getElementById('legend');

    legend.innerHTML += radarChart.generateLegend();
</script>
