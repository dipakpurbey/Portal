<div class="container-fluid">
    <br>
    <ol class="breadcrumb">
        <li>
            <a href="/">
                Dashboard
            </a>
        </li>
        <li class="active">
            Trial: {{ trial.name }}
        </li>
    </ol>
    <div class="col-lg-4 col-md-12">
        <div class="card">
            <div class="card-block">
                <h4 class="card-title text-center">
                    {{ trial.name }} Trial
                </h4>
                <p class="card-text">
                    {{ trial.description }}
                </p>
                <table class="table">
                    <tbody>
                         <tr>
                            <th scope="row">
                                IRB ID
                            </th>
                            <td>
                                {{ trial.IRBID }}
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">
                                IRB Start Date
                            </th>
                            <td>
                                {{ trial.start }}
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">
                                IRB End Date
                            </th>
                            <td>
                                {{ trial.end }}
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">
                                Patient Count
                            </th>
                            <td>
                                {{ trial.patientCount }}
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">
                                Noncompliant Count
                            </th>
                            <td>
                                {{ trial.noncompliantCount }}
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-7">
        <canvas id="radarChart" width="400" height="400"></canvas>
    </div>
    <div class="col-lg-4 col-md-5">
        <div id="legend" class="card">
            <div class="card-block">
                <h4 class="card-title">
                    Legend
                </h4>
            </div>
        </div>
    </div>
    <div class="col-xs-12">
        <div class="card">
            <div class="card-block">
                <div class="row">
                    <div class="col-sm-6">
                        <h4 class="card-title">
                            Patients
                        </h4>
                    </div>
                    <div class="col-sm-6">
                        <button type="button" class="btn btn-primary pull-right" data-toggle="modal" data-target="#addModal">
                            ADD NEW
                        </button>
                    </div>
                </div>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>
                                    Patient Pin
                                </th>
                                <th>
                                    Status
                                </th>
                                <th>
                                    Stage
                                </th>
                                <th>
                                    Last Taken
                                </th>
                                <th>
                                    Consecutive Missed
                                </th>
                                <th>
                                    Total Missed
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#unless patients.length}}
                                <tr>
                                    <td colspan="8">
                                        <div class="card card-inverse card-info text-center card-block">
                                            <div class="card-title">
                                                No Patients
                                            </div>
                                            <div class="card-text">
                                                Please add some patients to this trial.
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {{/unless}}
                            {{#each patients}}
                                <tr class="table-{{ statusType }}">
                                    <td>
                                        <a href="/patient/{{ id }}">
                                            {{ id }}
                                            <i class="fa fa-search"></i>
                                        </a>
                                    </td>
                                    <td>
                                        {{ status }}
                                    </td>
                                    <td>
                                        {{ stage }}
                                    </td>
                                    <td>
                                        {{ lastTaken }}
                                    </td>
                                    <td>
                                        {{ consecutiveMissed }}
                                    </td>
                                    <td>
                                        {{ totalMissed }}
                                    </td>
                                </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

{{> add-patient}}

<script>
    var data = JSON.parse('{{{ graphData }}}');
    var ctx = document.getElementById('radarChart').getContext('2d');
    var options = {
        legendTemplate: '<ul class="list-group list-group-flush"><% for (var i = 0; i < data.labels.length; i++){%><li class="list-group-item"><i style="color:<%=data.datasets[0].backgroundColor[i]%>" class="fa fa-circle"></i> <%=data.labels[i]%></li><%}%></ul>'
    };
    var myNewChart = new Chart(ctx, {
        type: 'doughnut',
        data: data,
        options: options
    });
    var legend = document.getElementById('legend');

    legend.innerHTML += myNewChart.generateLegend();
</script>
