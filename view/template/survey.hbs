<div class="container-fluid">
    <br>
    <ol class="breadcrumb">
        <li>
            <a href="/">
                Dashboard
            </a>
        </li>
        <li>
            <a href="/trial/{{ trial.id }}">
                Trial: {{ trial.name }}
            </a>
        </li>
        <li>
            <a href="/patient/{{ patient.pin }}">
                Patient: {{ patient.pin }}
            </a>
        </li>
        <li class="active">
            Survey: {{ survey.surveyId }}
        </li>
    </ol>
    <div class="row">
        <div class="col-sm-12">
            <div class="card">
                <div class="card-block">
                    <h4 class="card-title">
                        {{ survey.name }}
                    </h4>
                    <p class="card-text">
                        Available: from {{ survey.startTime }} to {{ survey.endTime }}.
                        <br>
                        Taken: {{#if survey.userSubmissionTime}}{{ survey.userSubmissionTime }}{{else}}survey has not been taken{{/if}}.
                    </p>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Question
                                    </th>
                                    <th>
                                        Options
                                    </th>
                                    <th>
                                        Answer
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each questions}}
                                    <tr>
                                        <td>
                                            {{ questionText }}
                                        </td>
                                        <td>
                                            {{ optionText }}
                                        </td>
                                        <td>
                                            {{#if selected}}
                                                patient answer
                                            {{/if}}
                                        </td>
                                    </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
